# Enforce to use slf4j
lombok.log.apacheCommons.flagUsage=ERROR
lombok.log.custom.flagUsage=ERROR
lombok.log.flogger.flagUsage=ERROR
lombok.log.jbosslog.flagUsage=ERROR
lombok.log.javaUtilLogging.flagUsage=ERROR
lombok.log.log4j.flagUsage=ERROR
lombok.log.log4j2.flagUsage=ERROR
lombok.log.xslf4j.flagUsage=ERROR

# warning some annotations.
#lombok.sneakyThrows.flagUsage=WARNING

# Set equalsAndHashCode
lombok.equalsAndHashCode.callSuper=call

# Set toString
lombok.toString.callSuper=call

# Fix for https://github.com/FasterXML/jackson-databind/issues/1122
# Omit the @ConstructorProperties annotation from generated constructors on field that has @JsonProperty.
lombok.anyConstructor.suppressConstructorProperties = true

# Copy the Qualifier annotation from the instance variables to the constructor
# see https://github.com/rzwitserloot/lombok/issues/745
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Autowired
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy
lombok.copyableAnnotations += lombok.NonNull
#Alternative to @Autowired
lombok.copyableAnnotations += jakarta.inject.Inject
#Alternative to @Qualifier
lombok.copyableAnnotations += jakarta.inject.Named
#Injects an EntityManager (instead of using @Autowired)
lombok.copyableAnnotations += jakarta.persistence.PersistenceContext
#Injects an EntityManagerFactory
lombok.copyableAnnotations += jakarta.persistence.PersistenceUnit
